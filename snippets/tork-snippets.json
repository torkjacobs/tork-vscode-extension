{
  "Tork Policy Template": {
    "prefix": ["tork-policy", "policy"],
    "body": [
      "# Tork AI Governance Policy",
      "# Version: ${1:1.0.0}",
      "# Description: ${2:Policy description}",
      "",
      "version: \"${1:1.0.0}\"",
      "name: ${3:policy-name}",
      "description: ${2:Policy description}",
      "",
      "rules:",
      "  - name: ${4:rule-name}",
      "    description: ${5:Rule description}",
      "    condition:",
      "      ${6:field}: ${7:value}",
      "    action: ${8|ALLOW,BLOCK,WARN,REDACT,ESCALATE|}",
      "    severity: ${9|LOW,MEDIUM,HIGH,CRITICAL|}",
      "$0"
    ],
    "description": "Create a new Tork policy template"
  },
  "PII Protection Policy": {
    "prefix": ["tork-pii", "pii-policy"],
    "body": [
      "# PII Protection Policy",
      "version: \"1.0.0\"",
      "name: pii-protection",
      "description: Automatically detect and redact PII from AI outputs",
      "",
      "rules:",
      "  - name: redact-email",
      "    description: Redact email addresses",
      "    condition:",
      "      pattern: EMAIL",
      "    action: REDACT",
      "    severity: MEDIUM",
      "",
      "  - name: redact-ssn",
      "    description: Redact Social Security Numbers",
      "    condition:",
      "      pattern: SSN",
      "    action: REDACT",
      "    severity: HIGH",
      "",
      "  - name: redact-credit-card",
      "    description: Redact credit card numbers",
      "    condition:",
      "      pattern: CREDIT_CARD",
      "    action: REDACT",
      "    severity: HIGH",
      "",
      "  - name: redact-phone",
      "    description: Redact phone numbers",
      "    condition:",
      "      pattern: PHONE",
      "    action: REDACT",
      "    severity: LOW",
      "$0"
    ],
    "description": "Create a PII protection policy"
  },
  "Content Moderation Policy": {
    "prefix": ["tork-moderation", "content-policy"],
    "body": [
      "# Content Moderation Policy",
      "version: \"1.0.0\"",
      "name: content-moderation",
      "description: Block harmful or inappropriate content",
      "",
      "rules:",
      "  - name: block-harmful-content",
      "    description: Block potentially harmful instructions",
      "    condition:",
      "      contains:",
      "        - \"how to hack\"",
      "        - \"bypass security\"",
      "        - \"exploit vulnerability\"",
      "    action: BLOCK",
      "    severity: CRITICAL",
      "",
      "  - name: warn-sensitive-topics",
      "    description: Warn on sensitive topics",
      "    condition:",
      "      contains:",
      "        - \"medical advice\"",
      "        - \"legal advice\"",
      "        - \"financial advice\"",
      "    action: WARN",
      "    severity: MEDIUM",
      "$0"
    ],
    "description": "Create a content moderation policy"
  },
  "Rate Limiting Policy": {
    "prefix": ["tork-ratelimit", "rate-policy"],
    "body": [
      "# Rate Limiting Policy",
      "version: \"1.0.0\"",
      "name: rate-limiting",
      "description: Enforce rate limits on API usage",
      "",
      "rules:",
      "  - name: api-rate-limit",
      "    description: Limit API requests per minute",
      "    condition:",
      "      rate_limit:",
      "        requests: ${1:100}",
      "        window: ${2:60}  # seconds",
      "        key: ${3|ip,user,api_key|}",
      "    action: BLOCK",
      "    severity: MEDIUM",
      "",
      "  - name: burst-protection",
      "    description: Prevent request bursts",
      "    condition:",
      "      rate_limit:",
      "        requests: ${4:20}",
      "        window: ${5:1}  # seconds",
      "        key: ${6|ip,user,api_key|}",
      "    action: BLOCK",
      "    severity: HIGH",
      "$0"
    ],
    "description": "Create a rate limiting policy"
  },
  "Tool Governance Policy": {
    "prefix": ["tork-tools", "tool-policy"],
    "body": [
      "# Tool Governance Policy",
      "version: \"1.0.0\"",
      "name: tool-governance",
      "description: Control which tools AI agents can use",
      "",
      "rules:",
      "  - name: block-dangerous-tools",
      "    description: Block access to dangerous system commands",
      "    condition:",
      "      tool:",
      "        name:",
      "          - \"execute_command\"",
      "          - \"shell_exec\"",
      "          - \"system_call\"",
      "        args:",
      "          contains:",
      "            - \"rm -rf\"",
      "            - \"format\"",
      "            - \"delete\"",
      "    action: BLOCK",
      "    severity: CRITICAL",
      "",
      "  - name: require-approval-file-write",
      "    description: Require human approval for file writes",
      "    condition:",
      "      tool:",
      "        name: \"write_file\"",
      "    action: ESCALATE",
      "    severity: HIGH",
      "$0"
    ],
    "description": "Create a tool governance policy"
  },
  "HITL Policy": {
    "prefix": ["tork-hitl", "hitl-policy"],
    "body": [
      "# Human-in-the-Loop Policy",
      "version: \"1.0.0\"",
      "name: hitl-approval",
      "description: Require human approval for sensitive actions",
      "",
      "rules:",
      "  - name: require-approval-high-risk",
      "    description: Escalate high-risk actions for human review",
      "    condition:",
      "      risk_score:",
      "        greaterThan: ${1:0.7}",
      "    action: ESCALATE",
      "    severity: HIGH",
      "    metadata:",
      "      approval_timeout: ${2:3600}  # seconds",
      "      approvers:",
      "        - ${3:admin@example.com}",
      "",
      "  - name: require-approval-financial",
      "    description: Require approval for financial actions",
      "    condition:",
      "      category: \"financial\"",
      "      amount:",
      "        greaterThan: ${4:1000}",
      "    action: ESCALATE",
      "    severity: CRITICAL",
      "$0"
    ],
    "description": "Create a human-in-the-loop approval policy"
  },
  "Tork Rule": {
    "prefix": ["tork-rule", "rule"],
    "body": [
      "  - name: ${1:rule-name}",
      "    description: ${2:Rule description}",
      "    condition:",
      "      ${3:field}: ${4:value}",
      "    action: ${5|ALLOW,BLOCK,WARN,REDACT,ESCALATE|}",
      "    severity: ${6|LOW,MEDIUM,HIGH,CRITICAL|}",
      "$0"
    ],
    "description": "Add a new rule to a policy"
  },
  "Tork Condition": {
    "prefix": ["tork-condition", "condition"],
    "body": [
      "    condition:",
      "      ${1|contains,matches,equals,greaterThan,lessThan|}:",
      "        ${2:value}",
      "$0"
    ],
    "description": "Add a condition block"
  }
}
